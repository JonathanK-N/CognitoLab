{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "strict": true,
    "noImplicitAny": true,
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": ".",
    "paths": {
      "@cognitolab/ui": ["packages/ui/src"],
      "@cognitolab/simulator-core": ["packages/simulator-core/src"],
      "@cognitolab/robot-simulation-engine": ["packages/robot-simulation-engine/src"],
      "@cognitolab/components-svg": ["packages/libraries/components-svg/src"]
    }
  }
}
